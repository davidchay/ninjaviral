@import "normalize.styl"
@import "fonts.styl" 


gris_claro = #bab6c4
gris_oscuro = #111111
naranja = #c32700
negro = #000000
blanco = #ffffff
body
	font-size 16px
	font-family 'Open Sans', sans-serif

a
	text-decoration none
	color black

h1
h2
h3
h4
h5
h6
	font-family 'Merriweather', serif
h1
h2
h3	
	font-style italic
h1
	font-weight 900	
h2
	font-weight 700

	
/*Clases de ayuda*/
.container
	margin 0 auto
	max-width 1200px
	padding 0 0.813rem
	text-align center
.desktop
	display none
.float-left
	float left
.float-right
	float right
.margin-v
	margin 1.2rem auto
.relative
	position relative
.tablet
	display none
	font-size 1rem
.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right
.visible
	display block

/*Clases de maqueta*/
.destacados-wraper
	font-size 0
	margin-bottom 2rem
	overflow hidden
	width 100%
	
.principal-wrap
	float left
	font-size 16px
	height 484px
	margin-bottom 1rem
	overflow hidden
	width 100%
.secun-wrap
	float left
	font-size 0
	overflow hidden
	text-align left
	width 100%
	
.post-secun
	width 32%	
	margin-right 2%
	height 155px
	&:nth-child(3n)
		margin-right 0
	&.post-destacado
		display inline-block
		font-size .75rem
		h2
			width 100%
			top 45%
			padding .35rem
			
	
.post-destacado
	display block
	overflow hidden
	position relative
	img
		height auto
		width 100%
	h2
		background rgba(negro, .50)
		color white
		left 0
		padding 1rem
		position absolute
		top 50%
		
.footer
	background-color gris_oscuro
	color white
	font-size .8rem
	padding 1rem 0
.input-search-menu
	background rgba(white,.95)
	border 1px solid gris_oscuro
	border-radius .3rem
	display inline
	font-family 'icomoon'
	padding .5rem .3rem
	width 85%
.info-post
	font-size 0.875rem
	padding 0.375rem 0
	text-transform uppercase
	a
		color gris_claro
.img
	padding 0
	marging 0
	img
		width 100%
		height auto

.logo
	h1
		margin 0
		padding 0
.logo-image
	height 4.5rem
	width auto
.menu
	font-size 1rem
	list-style none
	margin 0
	overflow hidden
	padding 0
.menu-op
	margin 0
	a
		background negro
		color blanco
		display block
		font-size 1rem
		padding .7rem
		text-align left
	&:nth-child(even)
		a
			background gris_oscuro
.menu-principal
	background black
	clear both
	display none
	font-size 0
	left 0.813rem
	max-width 18.125rem
	position absolute
	text-transform uppercase
	top 3.5rem
	width 90%

	
.ninja
	font-size 2.5rem
.ninjaviral
	font-size 1.5rem	
.post_home
	display inline-block
	margin-bottom 1rem
	margin-right 3%
	padding 0
	text-align left
	vertical-align: top;
	width 48.5%
	figure
		margin 0
		img
			width 100%
	h2
		margin .5rem 0
		font-size 1rem
		a
			&:hover
				color naranja
	&:nth-child(even)
		margin-right 0	

.social-item
	display inline-block
	margin-left .5rem
	padding .8rem 0 .8rem .5rem
	a
		color white
		display block
.show-menu
	font-family icomoon
	font-size 1rem
	left 0.813rem
	position absolute
	top 1.5rem
	padding .5em
	background lightgray
	&:before
		content: "\e9bd"
		
.show-menu-on
	background black
	color white
	&:before
		content: ""
		content: "\e603";	
	
.titulo_post	
	font-family 'Merriweather', serif
	font-size 1rem
	font-weight normal
	color gris_oscuro
.top_social
	background black
	display none
	margin-bottom 2rem
/*Identificadores*/
#container-post-home
	font-size 0

@media screen and (min-width:767px) 
	.logo
		width 28%
	.logo-image
		height 5rem
	.menu-principal
		display block
		margin 3rem 0
		max-width 100%
		position static
		width auto
		&.menu-flotante
			width 100%
			position fixed
			top 0
			left 0
			z-index 2002
			margin-top 0
	
	.menu-op
		display inline-block
		&:nth-child(even)
			a
				background transparent
		a
			background transparent
			&:hover
				background naranja
		&.here
			a
				background naranja
	.post_home
		width 30%	
		margin-right 5%
		&:nth-child(even)
			margin-right 5%
		&:nth-child(3n)
			margin-right 0	
		h2
			font-size 1.125rem
	.show-menu
		display none	
	.tablet 
		display block
	.top_social
		display block
	#header-wrap
		text-align left
	
/*Desktop*/
@media screen and (min-width:1024px)
	.anuncio-top
		float right	
	.desktop
		display inline
	.container
		max-width 1024px
	.post_home
		width 22%	
		margin-right 4%
		&:nth-child(even)
			margin-right 4%
		&:nth-child(3n)
			margin-right 4%	
		&:nth-child(4n)	
			margin-right 0
		h2
			font-size 1.250rem
			font-weight 900
	.principal-wrap
		width 70.2%
		margin-right .7%
	.secun-wrap
		width 29%
	.post-secun
		width 100%	
		margin-right 0
		margin-bottom 3%	